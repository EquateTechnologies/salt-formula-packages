packages:
  install:
    package1:
      version: 1.0.0
    package2:
      name: blah2
  uninstall:
    - package3
    - package4
  pip:
    install:
      pip1:
        version: 1.2.3
      pip2:
        name: whacky-complex-name
        user: specific-user-to-install-as
        bin_env: /foo/.virtualenvs/bar/bin/pip
    uninstall:
      - pip3
      - pip4
  gem:
    install:
      gem1:
        version: 1.2.3
      gem2:
        name: whacky-complex-name
        user: specific-user-to-install-as
        source: https://specific-url-to-install-from/blah.gem
    uninstall:
      - gem3
      - gem4
  npm:
    install:
      node-package1:
        version: 1.2.3
      node-package2:
        name: whacky-complex-name
        user: specific-user-to-install-as
    uninstall:
      - node-package3
      - node-package4
